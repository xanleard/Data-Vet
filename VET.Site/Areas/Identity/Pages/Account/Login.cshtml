@page
@model LoginModel


<div class="login-logo">
    <a ><b>VET</b>SI</a>
</div>
<!-- /.login-logo -->
<div class="card">
    <div class="card-body login-card-body">
        <div asp-validation-summary="All" class="text-danger"></div>
        <p class="login-box-msg">Inicia sesión para comenzar tu sesión</p>

        <form id="account" method="post">
            <div class="input-group mb-3">
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Correo electrónico">
                <div  class="input-group-append">
                    <div class="input-group-text">
                        <span asp-validation-for="Input.Email" class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Contraseña">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span  asp-validation-for="Input.Password" class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                @*<div class="col-8">
                    <div class="icheck-primary">
                        <input asp-for="Input.RememberMe" type="checkbox" id="remember">
                        <label for="remember">
                            Recuérdame
                        </label>
                    </div>
                </div>*@
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Inicia sesión</button>
                </div>
                <!-- /.col -->
            </div>
        </form>


        @*<p class="mb-1">
            <a id="forgot-password" asp-page="./ForgotPassword">
                Olvidé mi contraseña
            </a>
        </p>
        <p class="mb-0">
            <a  asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">Regístrese como nuevo usuario</a>
        </p>*@
    </div>
    <!-- /.login-card-body -->
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
